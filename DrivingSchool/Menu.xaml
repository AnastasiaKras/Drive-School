        <Label Content="DRIVING SCHOOL" Margin="164,0,9.6,375" FontFamily="Cambria" FontWeight="Bold" FontSize="20" Background="#FF545252" Foreground="White" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left"/>
